BLUE='\e[01;34m'
VIOLET='\e[1;95m'
DARKGREEN='\e[1;96m'
BLACK='\e[01;30m'
CYAN='\e[01;36m'
WHITE='\e[01;37m'
BGBL='\e[1;30;47m'
loc="/sdcard/RemGaming/system"
loc1="/sdcard/RemGaming"
gamin="/data/data/com.termux/files/usr/bin/gaming"
[ ! -d $loc ] && mkdir -p $loc


# APP LIST TO BE ENABLED/DISABLED
